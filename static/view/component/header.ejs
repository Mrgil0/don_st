<header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
          <a class="link-secondary" href="#">Subscribe</a>
        </div>
        <div class="col-4 text-center">
          <a class="blog-header-logo text-dark" href="/">돈세탁</a>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
          <a class="link-secondary" href="#" aria-label="Search">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"></circle><path d="M21 21l-5.2-5.2"></path></svg>
          </a>
          <%if (!user) { %>
          <a class="btn btn-sm btn-outline-secondary" href="/login" style="margin-right:4px">로그인</a>
          <a class="btn btn-sm btn-outline-secondary" href="/register">회원가입</a>
          <% } else { %>
          <p style="line-height:36px; height:18px; width:auto">내 잔여포인트 : <%= user.point %></p>
          <a class="btn btn-sm btn-outline-secondary" href="/logout">로그아웃</a>
          <% } %>
        </div>
      </div>
</header>
<hr style="margin: 0">